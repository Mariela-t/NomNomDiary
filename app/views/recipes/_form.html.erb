

<div class="card">
 
  <div class="card-body">
   <%= form_with(model: recipe) do |form| %>

  <div class="form-group">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category, style: "display: block" %>
    <%= form.text_field :category, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :ingredients, style: "display: block" %>
    <%= form.text_area :ingredients, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :steps, style: "display: block" %>
    <%= form.text_area :steps, class: "form-control" %>
  </div>
  <br/>
  <div>
    <%= form.submit class: "btn btn-secondary" %>
  </div>

<% end %>

  </div>
</div>